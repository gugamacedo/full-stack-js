<!DOCTYPE html>
<html lang="pt-br">
  <%- include('partials/head.ejs') %> 
  <body>
    <h1><%= title %></h1>

    <%- include('partials/navbar.ejs') %> 

    <% if (typeof message !== 'undefined') { %>
      <%= message %>   
    <% } %>

    <form action="/register/add" method="POST">
      <div><label for="name">Nome</label><input type="text" name="name" placeholder="Digite seu nome"></div>
      <div><label for="age">Idade</label><input type="text" name="age" placeholder="Digite sua idade"></div>
      <div><label for="email">Email</label><input type="email" name="email" placeholder="Digite seu email"></div>
      <div><label for="password">Senha</label><input type="password" name="password" placeholder="Digite sua senha"></div>
      <button type="submit">Cadastrar</button>
    </form>

    <%- include('partials/foot.ejs') %> 
  </body>
</html>